# Dockerfile to run JaCaMo applications
# based on JaCaMo 1.3

# to build:
#    docker build --no-cache  -t jomifred/jacamo:1.3 -t jomifred/jacamo:latest -f Dockerfile1.3 --progress=plain .
# to publish
#    docker push --all-tags jomifred/jacamo

FROM alpine/java:21-jdk
ENV PATH=$PATH:$JAVA_HOME/bin

RUN apk add --update --no-cache git bash fontconfig ttf-dejavu \
    libxrender libxtst libxi

RUN git clone --branch v1.3.0 https://github.com/jacamo-lang/jacamo-cli.git && \
    cd jacamo-cli \
    && ./gradlew createBin

#RUN cd /jacamo-cli/build/bin \
#    && ../../src/main/resources/scripts/create-bin.sh jacamo-cli-all-1.3.0.jar \
#    && cp /jacamo-cli/build/bin/jacamo /usr/local/bin

RUN cp /jacamo-cli/build/bin/jacamo /usr/local/bin

#ENV PATH $PATH:/jacamo-cli/build/bin

# create and run an application to download gradle dependencies
RUN cd /tmp && \
    jacamo app create cacheapp --console && \
    cd cacheapp && \
    ./gradlew build && \
    cd /tmp && \
    rm -rf cacheapp


ENTRYPOINT [ "/usr/local/bin/jacamo" ]
